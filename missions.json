  "subjects": {
    "science": {
      "title": "Science",
      "description": "Explore the wonders of science through interactive learning",
      "missions": [
        {
          "id": "science_energy",
          "title": "Energy and Its Forms",
          "grade": 6,
          "prerequisite": null,
          "estimatedTime": "30 minutes",
          "phases": {
            "learn": {
              "content": [
                {
                  "type": "text",
                  "title": "Introduction to Energy",
                  "content": "Energy is the ability to do work. It exists in many forms such as heat, light, chemical, electrical, and mechanical energy."
                },
                {
                  "type": "image",
                  "title": "Types of Energy",
                  "url": "assets/lessons/science/energy-types.png",
                  "caption": "Different forms of energy in our daily life"
                },
                {
                  "type": "video",
                  "title": "Energy Transformations",
                  "url": "assets/lessons/science/energy-transform.mp4",
                  "duration": "3:45"
                },
                {
                  "type": "interactive",
                  "title": "Energy Conversion Demo",
                  "description": "Click on different objects to see energy transformations",
                  "interactionType": "clickable-scene"
                }
              ]
            },
            "play": {
              "gameId": "treasureHunt",
              "config": {
                "theme": "energy",
                "difficulty": "beginner",
                "objectives": [
                  "Identify different forms of energy",
                  "Match energy types with real-world examples",
                  "Understand energy transformations"
                ],
                "gameItems": {
                  "collectibles": [
                    {
                      "id": "solar_panel",
                      "type": "light_to_electrical"
                    },
                    {
                      "id": "battery",
                      "type": "chemical_to_electrical"
                    },
                    {
                      "id": "windmill",
                      "type": "mechanical_to_electrical"
                    }
                  ],
                  "obstacles": [
                    {
                      "id": "energy_puzzle",
                      "type": "match_transformation"
                    }
                  ]
                },
                "timeLimit": 300,
                "minScore": 70
              }
            },
            "conquer": {
              "quizTitle": "Master of Energy",
              "passingScore": 80,
              "timeLimit": 600,
              "questions": [
                {
                  "id": "q1",
                  "type": "mcq",
                  "question": "Which form of energy is stored in food?",
                  "options": [
                    "Chemical energy",
                    "Kinetic energy",
                    "Sound energy",
                    "Light energy"
                  ],
                  "correct": 0,
                  "explanation": "Food contains chemical energy stored in chemical bonds, which is released during digestion."
                },
                {
                  "id": "q2",
                  "type": "matching",
                  "question": "Match the energy transformation with its example:",
                  "pairs": [
                    {
                      "item": "Solar Panel",
                      "match": "Light to Electrical"
                    },
                    {
                      "item": "Car Engine",
                      "match": "Chemical to Mechanical"
                    },
                    {
                      "item": "Light Bulb",
                      "match": "Electrical to Light and Heat"
                    }
                  ]
                },
                {
                  "id": "q3",
                  "type": "dragdrop",
                  "question": "Arrange the energy transformations in a hydroelectric dam:",
                  "items": [
                    "Potential Energy",
                    "Kinetic Energy",
                    "Mechanical Energy",
                    "Electrical Energy"
                  ],
                  "correct_sequence": [0, 1, 2, 3]
                }
              ]
            }
          }
        },
        {
          "id": "science_matter",
          "title": "States of Matter",
          "grade": 6,
          "prerequisite": "science_energy",
          "estimatedTime": "45 minutes",
          "phases": {
            "learn": {
              "content": [
                {
                  "type": "text",
                  "title": "Introduction to Matter",
                  "content": "Matter is anything that has mass and takes up space. It exists in three main states: solid, liquid, and gas."
                },
                {
                  "type": "simulation",
                  "title": "Particle Behavior",
                  "description": "Interactive simulation showing particle movement in different states",
                  "config": {
                    "particles": true,
                    "temperature": true,
                    "stateChanges": true
                  }
                },
                {
                  "type": "image",
                  "title": "State Changes",
                  "url": "assets/lessons/science/state-changes.png",
                  "caption": "Processes of melting, freezing, evaporation, and condensation"
                }
              ]
            },
            "play": {
              "gameId": "simulationGame",
              "config": {
                "theme": "matter",
                "difficulty": "intermediate",
                "objectives": [
                  "Control temperature to change states",
                  "Collect particles in different states",
                  "Complete state transformation cycles"
                ],
                "simParams": {
                  "minTemp": 0,
                  "maxTemp": 100,
                  "particleCount": 100,
                  "boundaryConditions": "periodic"
                },
                "timeLimit": 400,
                "minScore": 75
              }
            },
            "conquer": {
              "quizTitle": "States of Matter Master",
              "passingScore": 80,
              "timeLimit": 600,
              "questions": [
                {
                  "id": "q1",
                  "type": "mcq",
                  "question": "What happens to particles when matter changes from liquid to gas?",
                  "options": [
                    "They move faster and further apart",
                    "They move slower and closer together",
                    "They stop moving",
                    "They disappear"
                  ],
                  "correct": 0,
                  "explanation": "During evaporation, particles gain energy and move faster, breaking free from other particles."
                },
                {
                  "id": "q2",
                  "type": "ordering",
                  "question": "Order the states of matter from lowest to highest particle energy:",
                  "items": [
                    "Solid",
                    "Liquid",
                    "Gas",
                    "Plasma"
                  ],
                  "correct_sequence": [0, 1, 2, 3]
                }
              ]
            }
          }
        }
      ]
    },
